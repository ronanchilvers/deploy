<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Deploy{% endblock %}</title>
        <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
        <link rel="stylesheet" type="text/css" href="/css/app.css">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <nav class="navbar" role="navigation" aria-label="main navigation">
            <div class="navbar-brand">
                <a class="navbar-item" href="/">
                    Deploy
                </a>

                <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbar_menu">
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                </a>
            </div>
            <div id="navbar_menu" class="navbar-menu">
                <div class="navbar-start">
                {% for item in main_nav %}
                    {% set selected = is_current_path(item.route) %}
                    <a class="navbar-item{% if selected %} is-active{% endif %}" href="{{ path_for(item.route) }}"{% if selected %} aria-current="page"{% endif %}>{{ item.name }}</a>
                {% endfor %}
                </div>

                <div class="navbar-end">
                    <div class="navbar-item has-dropdown">
                        <a class="navbar-link">
                            Profile
                        </a>

                        <div class="navbar-dropdown is-right">
                            <a class="navbar-item">
                                Your profile
                            </a>
                            <hr class="navbar-divider">
                            <a href="#" class="navbar-item">
                                Logout
                            </a>
                        </div>
                    </div>
                </div>
            </div>

        </nav>
    {% for type, spec in {'info': {key: 'success', title: 'Notice'}, 'error': {key: 'danger', title: 'Uh oh!'}} %}
        {% for message in session.getFlash(type) %}
        <div class="notification has-text-centered is-{{ spec.key }}">
            <h3 class="title">{{ spec.title }}</h3>
            <p class="subtitle">{{ message.heading }}</p>
        {% if message.content %}
            <p class="content">{{ message.content }}</p>
        {% endif %}
        </div>
        {% endfor %}
    {% endfor %}
        <div id="main-wrapper" class="container is-fluid">
            {% block body %}{% endblock %}
        </div>
        <script type="text/javascript" src="/js/vendor.js"></script>
        <script type="text/javascript" src="/js/app.js"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
