{% extends 'page.html.twig' %}

{% block body %}
<div class="header">
    <header class="project-heading">
        <div class="columns">
            <div class="column">
                <div class="columns is-mobile is-vcentered">
                {% if icon %}
                    <div class="column is-narrow">
                        <span class="icon is-inline-block is-size-3"><i class="fas fa-{{ icon }}"></i></span>
                    </div>
                {% endif %}
                    <div class="column is-narrow">
                        <h1 class="is-size-3">{{ layout_title }}</h1>
                    </div>
                </div>
            </div>
        </div>
    </header>
</div>
<div class="enclosed-wrapper">
    {% block layout_body %}{% endblock %}
</div>
{% endblock %}
