{% extends 'page.html.twig' %}

{% block body %}
{% if 0 < projects|length %}
<section class="section">
{% for project in projects %}
    <div class="box">
        <div class="columns">
            <div class="column is-narrow is-border-right">
                <i class="far fa-star"></i>
            </div>
            <div class="column">
                <span class="icon"><i class="fab fa-{{ project.provider }}"></i></span><a href="{{ path_for('project.view', { key: project.key }) }}"><span>{{ project.repository }}</span></a>
            </div>
            <div class="column">
                <span class="is-size-7">Default Branch</span><br />
                {{ project.branch }}
            </div>
            <div class="column">
                <span class="is-size-7">Last Release</span><br />
                {{ project.last_release|human_date }}
            </div>
            <div class="column">
                <span class="is-size-7">Commit</span><br />
                {{ sha_link(project, project.last_sha) }}
            </div>
            <div class="column is-narrow">
                <a class="button is-link" href="{{ path_for('project.view', { key: project.key }) }}">View</a>
            </div>
        </div>
    </div>
{% endfor %}
</section>

