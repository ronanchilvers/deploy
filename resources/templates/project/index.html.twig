{% extends 'page.html.twig' %}

{% block body %}
{% if 0 < projects|length %}
<section class="section projects">
{% for project in projects %}
    <div class="box project">
        <div class="columns">
            <div class="column is-narrow is-border-right is-border-none-mobile is-pulled-right-mobile">
                <span class="icon"><i class="far fa-star"></i></span>
            </div>
            <div class="column">
                <span class="is-size-7">Repository</span><br />
                <a href="{{ path_for('project.view', { key: project.key }) }}" class="js-project-link">{{ project.repository }}</a>
            </div>
            <div class="column">
                <span class="is-size-7">Default Branch</span><br />
                {{ project.branch }}
            </div>
            <div class="column">
                <span class="is-size-7">Last Deployment</span><br />
                {% if not project.last_release %}Not yet deployed{% else %}{{ project.last_release|human_date }}{% endif %}
            </div>
            <div class="column">
                <span class="is-size-7">Author</span><br />
                {% if not project.last_author %}Not yet deployed{% else %}{{ project.last_author }}{% endif %}
            </div>
            <div class="column">
                <span class="is-size-7">SHA</span><br />
                {% if not project.last_sha %}Not yet deployed{% else %}{{ sha_link(project, project.last_sha) }}{% endif %}
            </div>
            <!-- <div class="column is-narrow">
                <a class="button is-link" href="{{ path_for('project.view', { key: project.key }) }}">View</a>
            </div> -->
        </div>
    </div>
{% endfor %}
</section>
{% else %}
<section class="hero is-light has-text-centered">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        No projects?
      </h1>
      <h2 class="subtitle">
        You don't have any projects yet - create one and then you can start deploying!
      </h2>
      <p><a class="button is-primary" href="{{ path_for('project.add') }}">Add a new project</a></p>
    </div>
  </div>
</section>
{% endif %}
{% endblock %}
